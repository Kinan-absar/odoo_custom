<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="internal_transfer_pdf">
    <t t-call="web.external_layout">
        <main>
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <!-- TITLE -->
                    <h2 style="text-align:center; margin-bottom:10px;">
                        INTERNAL TRANSFER VOUCHER
                    </h2>
                    <hr/>

                    <!-- HEADER INFO -->
                    <table class="table table-sm mt16">
                        <tr>
                            <td width="25%"><strong>Transfer No</strong></td>
                            <td width="25%"><span t-esc="o.name"/></td>
                            <td width="25%"><strong>Date</strong></td>
                            <td width="25%"><span t-esc="o.date"/></td>
                        </tr>
                        <tr>
                            <td><strong>Source Journal</strong></td>
                            <td><span t-esc="o.source_journal_id.name"/></td>
                            <td><strong>Destination Journal</strong></td>
                            <td><span t-esc="o.destination_journal_id.name"/></td>
                        </tr>
                    </table>

                    <!-- AMOUNT -->
                    <table class="table table-bordered mt16">
                        <tr>
                            <th>Total Transfer Amount</th>
                            <th class="text-right">
                                <span t-field="o.amount"
                                      t-options="{'widget': 'monetary', 'currency_field': 'currency_id'}"/>
                            </th>
                        </tr>
                    </table>

                    <!-- JOURNAL ENTRY -->
                    <h4 class="mt16">Accounting Entry</h4>

                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Account</th>
                                <th>Label</th>
                                <th class="text-right">Debit</th>
                                <th class="text-right">Credit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.move_id.line_ids" t-as="line">
                                <tr>
                                    <td><span t-esc="line.account_id.display_name"/></td>
                                    <td><span t-esc="line.name"/></td>
                                    <td class="text-right">
                                        <t t-if="line.debit">
                                            <span t-field="line.debit"
                                                  t-options="{'widget': 'monetary', 'currency_field': 'currency_id'}"/>
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="line.credit">
                                            <span t-field="line.credit"
                                                  t-options="{'widget': 'monetary', 'currency_field': 'currency_id'}"/>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- SIGNATURES -->
                    <table class="table mt32" style="border:none;">
                        <tr>
                            <td width="33%" style="border:none;">
                                Prepared By<br/><br/>
                                ____________________
                            </td>
                            <td width="33%" style="border:none;">
                                Reviewed By<br/><br/>
                                ____________________
                            </td>
                            <td width="33%" style="border:none;">
                                Approved By<br/><br/>
                                ____________________
                            </td>
                        </tr>
                    </table>

                </div>
            </t>
        </main>
    </t>
</template>

</odoo>
