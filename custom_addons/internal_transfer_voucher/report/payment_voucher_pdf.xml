<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="payment_voucher_pdf">
    <t t-call="web.external_layout">
        <main>
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <!-- ================= HEADER ================= -->
                    
                        <tr>
                        <td width="40%" style="text-align:center;">
                                <h3 style="margin:5px 0;">Payment Voucher</h3>
                                <h3 style="margin:0;">سند صرف</h3>
                            </td>
                        </tr>
                    

                    <!-- ================= MAIN INFO ================= -->
                   <table width="100%" style="font-size:12px; border-collapse:collapse;">

                        <!-- Voucher No -->
                        <tr>
                            <td width="25%"><strong>Voucher No</strong></td>
                            <td width="50%" style="text-align:center; border-bottom:1px solid #000;">
                                <span t-esc="o.name"/>
                            </td>
                            <td width="25%" style="text-align:right;"><strong>رقم السند</strong></td>
                        </tr>

                        <!-- Date -->
                        <tr>
                            <td><strong>Date</strong></td>
                            <td style="text-align:center; border-bottom:1px solid #000;">
                                <span t-esc="o.date"/>
                            </td>
                            <td style="text-align:right;"><strong>التاريخ</strong></td>
                        </tr>

                        <!-- Paid To -->
                        <tr>
                            <td><strong>Paid To</strong></td>
                            <td style="text-align:center; border-bottom:1px solid #000;">
                                <span t-esc="o.partner_id.display_name"/>
                            </td>
                            <td style="text-align:right;"><strong>تصرف إلى</strong></td>
                        </tr>

                        <!-- Amount -->
                        <tr>
                            <td><strong>Amount</strong></td>
                            <td style="text-align:center; border-bottom:1px solid #000;">
                                <span t-field="o.amount"
                                    t-options="{'widget':'monetary','currency_field':'currency_id'}"/>
                            </td>
                            <td style="text-align:right;"><strong>المبلغ</strong></td>
                        </tr>

                        <!-- Amount in Words -->
                        <tr>
                            <td><strong>Amount in Words</strong></td>
                            <td style="text-align:center; border-bottom:1px solid #000; direction:rtl;">
                                <span t-esc="o.amount_in_words_ar"/> فقط لا غير
                            </td>
                            <td style="text-align:right;"><strong>المبلغ كتابةً</strong></td>
                        </tr>

                        <!-- Paid For -->
                        <tr>
                            <td><strong>Paid For</strong></td>
                            <td style="text-align:center; border-bottom:1px solid #000;">
                                <span t-esc="o.description"/>
                            </td>
                            <td style="text-align:right;"><strong>وذلك مقابل</strong></td>
                        </tr>

                        <!-- Payment Method -->
                        <tr>
                            <td><strong>Payment Method</strong></td>
                            <td style="text-align:center; border-bottom:1px solid #000;">
                                <t t-if="o.payment_method == 'cash'">Cash</t>
                                <t t-if="o.payment_method == 'cheque'">Cheque</t>
                            </td>
                            <td style="text-align:right;"><strong>طريقة الدفع</strong></td>
                        </tr>

                    </table>



                    <!-- ================= SIGNATURES ================= -->
                    <div style="margin-top:60px; font-size:12px;">

                        <div style="width:45%; float:left; text-align:center;">
                            <strong>Paid By</strong><br/>
                            <div style="min-height:80px;"></div>
                            __________________________<br/>
                            دفع من
                        </div>

                        <div style="width:45%; float:right; text-align:center;">
                            <strong>Received By</strong><br/>
                            <div style="min-height:80px;"></div>
                            __________________________<br/>
                            المستلم
                        </div>

                        <div style="clear:both;"></div>
                    </div>


                </div>
            </t>
        </main>
    </t>
</template>

</odoo>
