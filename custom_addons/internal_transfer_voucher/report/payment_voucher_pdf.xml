<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="payment_voucher_pdf">
    <t t-call="web.external_layout">
        <main>
            <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size:12px;">

                    <!-- ================= TITLE ================= -->
                    <div style="text-align:center; margin-bottom:20px;">
                        <h2 style="margin:0;">PAYMENT VOUCHER</h2>
                        <h3 style="margin:0;">سند صرف</h3>
                    </div>

                    <!-- ================= AMOUNT BOX (RIGHT) ================= -->
                    <div style="width:30%; float:right; text-align:center;
                                border:1px solid #000; padding:20px; font-size:16px;">
                        <strong>
                            <span t-field="o.amount"
                                  t-options="{'widget':'monetary','currency_field':'currency_id'}"/>
                        </strong>
                    </div>

                    <!-- ================= MAIN INFO ================= -->
                    <div style="width:65%; float:left;">

                        <table width="100%" style="border-collapse:collapse;">
                            <tr>
                                <td width="30%"><strong>Voucher No</strong></td>
                                <td width="70%" style="border-bottom:1px solid #000;">
                                    <span t-esc="o.name"/>
                                </td>
                            </tr>

                            <tr>
                                <td><strong>Paid To</strong></td>
                                <td style="border-bottom:1px solid #000;">
                                    <span t-esc="o.partner_id.display_name"/>
                                </td>
                            </tr>

                            <tr>
                                <td><strong>Amount in Words</strong></td>
                                <td style="border-bottom:1px solid #000; direction:rtl;">
                                    <span t-esc="o.amount_in_words_ar"/> فقط لا غير
                                </td>
                            </tr>

                            <tr>
                                <td><strong>Paid For</strong></td>
                                <td style="border-bottom:1px solid #000;">
                                    <span t-esc="o.description"/>
                                </td>
                            </tr>
                        </table>

                    </div>

                    <div style="clear:both;"></div>

                    <!-- ================= RIGHT INFO (DATE + PAYMENT METHOD) ================= -->
                    <div style="margin-top:20px; width:65%; float:left;">
                        <table width="100%" style="border-collapse:collapse;">
                            <tr>
                                <td width="30%"><strong>Date</strong></td>
                                <td width="70%" style="border-bottom:1px solid #000;">
                                    <span t-esc="o.date"/>
                                </td>
                            </tr>

                            <tr>
                                <td><strong>Payment Method</strong></td>
                                <td style="border-bottom:1px solid #000;">
                                    <t t-if="o.payment_method == 'cash'">Cash</t>
                                    <t t-if="o.payment_method == 'cheque'">Cheque</t>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <div style="clear:both;"></div>

                    <!-- ================= SIGNATURES ================= -->
                    <div style="margin-top:70px;">

                        <div style="width:45%; float:left; text-align:center;">
                            <strong>Paid By</strong><br/><br/>
                            <div style="min-height:70px;"></div>
                            __________________________<br/>
                            دقع من 
                        </div>

                        <div style="width:45%; float:right; text-align:center;">
                            <strong>Received By</strong><br/><br/>
                            <div style="min-height:70px;"></div>
                            __________________________<br/>
                            المستلم
                        </div>

                        <div style="clear:both;"></div>
                    </div>

                </div>
            </t>
        </main>
    </t>
</template>

</odoo>
