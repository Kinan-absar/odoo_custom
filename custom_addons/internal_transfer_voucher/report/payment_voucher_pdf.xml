<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="payment_voucher_pdf">
    <t t-call="web.external_layout">
        <main>
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <!-- ================= HEADER ================= -->
                    
                        <tr>
                        <td>
                                <h3 style="margin:5px 0;">Payment Voucher</h3>
                                <h3 style="margin:0;">سند صرف</h3>
                            </td>
                        </tr>
                    

                    <!-- ================= MAIN INFO ================= -->
                    <table class="table table-bordered" style="font-size:12px;">
                        <tr>
                            <td><strong>Voucher No</strong></td>
                            <td style="text-align:center;"><span t-esc="o.name"/></td>
                            <td style="text-align:right;"><strong>رقم السند</strong></td>
                        </tr>


                        <tr>
                        <tr>
                            <td><strong>Date</strong></td>
                            <td style="text-align:center;"><span t-esc="o.date"/></td>
                            <td style="text-align:right;"><strong>التاريخ</strong></td>
                        </tr>


                        <tr>
                            <td><strong>Paid To</strong></td>
                            <td style="text-align:center;"><span t-esc="o.partner_id.display_name"/></td>
                            <td style="text-align:right;"><strong>تصرف إلى</strong></td>
                        </tr>


                        <tr>
                            <!-- English label -->
                            <td width="25%">
                                <strong>Amount</strong>
                            </td>

                            <!-- Shared value (center) -->
                            <td width="50%" style="text-align:center;">
                                <span t-field="o.amount"
                                    t-options="{'widget':'monetary','currency_field':'currency_id'}"/>
                            </td>

                            <!-- Arabic label -->
                            <td width="25%" style="text-align:right;">
                                <strong>المبلغ</strong>
                            </td>
                        </tr>

                        <tr>
                            <td width="25%">
                                <strong>Amount in Words</strong>
                            </td>

                            <td width="50%" style="text-align:center; direction:rtl;">
                                <span t-esc="o.amount_in_words_ar"/> فقط لا غير
                            </td>

                            <td width="25%" style="text-align:right;">
                                <strong>المبلغ كتابةً</strong>
                            </td>
                        </tr>
                        <tr>
                            <td width="25%">
                                <strong>Paid For</strong>
                            </td>

                            <td width="50%" style="text-align:center;">
                                <span t-esc="o.description"/>
                            </td>

                            <td width="25%" style="text-align:right;">
                                <strong>وذلك مقابل</strong>
                            </td>
                        </tr>

                        <tr>
                            <!-- English label -->
                            <td width="25%">
                                <strong>Payment Method</strong>
                            </td>

                            <!-- Shared value -->
                            <td width="50%" style="text-align:center;">
                                <t t-if="o.payment_method == 'cash'">Cash</t>
                                <t t-if="o.payment_method == 'cheque'">Cheque</t>
                            </td>

                            <!-- Arabic label -->
                            <td width="25%" style="text-align:right;">
                                <strong>طريقة الدفع</strong>
                            </td>
                        </tr>

                    </table>


                    <!-- ================= SIGNATURES ================= -->
                    <table class="table mt48" style="border:1px solid #000;">
                        <tr>
                            <td width="33%" style="padding:15px;">
                                Prepared By<br/>
                                <div style="min-height:90px;"></div>
                                ______________________<br/>
                                المحاسب
                            </td>

                            <td width="33%" style="padding:15px;">
                                Approved By<br/>
                                <div style="min-height:90px;"></div>
                                ______________________<br/>
                                المدير
                            </td>

                            <td width="33%" style="padding:15px;">
                                Received By<br/>
                                <div style="min-height:90px;"></div>
                                ______________________<br/>
                                المستلم
                            </td>
                        </tr>
                    </table>

                </div>
            </t>
        </main>
    </t>
</template>

</odoo>
