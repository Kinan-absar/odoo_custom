<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="payment_voucher_pdf">
    <t t-call="web.external_layout">
        <main>
            <t t-foreach="docs" t-as="o">
                <div class="page">

                    <!-- TITLE -->
                    <h2 style="text-align:center; margin-bottom:10px;">
                        PAYMENT VOUCHER
                    </h2>
                    <hr/>

                    <!-- HEADER INFO -->
                    <table class="table table-sm mt16">
                        <tr>
                            <td width="25%"><strong>Voucher No</strong></td>
                            <td width="25%"><span t-esc="o.name"/></td>
                            <td width="25%"><strong>Date</strong></td>
                            <td width="25%"><span t-esc="o.date"/></td>
                        </tr>
                        <tr>
                            <td><strong>Partner</strong></td>
                            <td colspan="3">
                                <span t-esc="o.partner_id.display_name"/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Journal</strong></td>
                            <td><span t-esc="o.journal_id.name"/></td>
                            <td><strong>Amount</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount"
                                      t-options="{'widget': 'monetary', 'currency_field': 'currency_id'}"/>
                            </td>
                        </tr>
                    </table>
                    <t t-if="o.description">
                        <div class="mt16">
                            <strong>Notes</strong>
                            <div style="min-height:40px; padding-top:4px;">
                                <span t-esc="o.description"/>
                            </div>
                        </div>
                    </t>

                    <!-- ACCOUNTING ENTRY -->
                    <h4 class="mt16">Accounting Entry</h4>

                    <table class="table table-sm table-bordered">
                        <thead>
                            <tr>
                                <th>Account</th>
                                <th class="text-right">Debit</th>
                                <th class="text-right">Credit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.move_id.line_ids" t-as="line">
                                <tr>
                                    <td><span t-esc="line.account_id.display_name"/></td>
                                    <td class="text-right">
                                        <t t-if="line.debit">
                                            <span t-field="line.debit"
                                                  t-options="{'widget': 'monetary', 'currency_field': 'currency_id'}"/>
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <t t-if="line.credit">
                                            <span t-field="line.credit"
                                                  t-options="{'widget': 'monetary', 'currency_field': 'currency_id'}"/>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- SIGNATURES -->
                    <table class="table mt48" style="border:none;">
                        <tr style="height:80px;">
                            <td width="33%" style="border:none; vertical-align:bottom;">
                                Prepared By<br/><br/>
                                __________________________
                            </td>
                            <td width="33%" style="border:none; vertical-align:bottom;">
                                Approved By<br/><br/>
                                __________________________
                            </td>
                            <td width="33%" style="border:none; vertical-align:bottom;">
                                Received By<br/><br/>
                                __________________________
                            </td>
                        </tr>
                    </table>


                </div>
            </t>
        </main>
    </t>
</template>

</odoo>
