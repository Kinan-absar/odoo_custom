<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="payment_voucher_pdf">
    <t t-call="web.external_layout">
        <main>
            <t t-foreach="docs" t-as="o">
                <div class="page" style="font-size:12px;">

                    <!-- ================= TITLE ================= -->
                    <div style="text-align:center; margin-bottom:20px;">
                        <h2 style="margin:0;">PAYMENT VOUCHER</h2>
                        <h3 style="margin:0;">سند صرف</h3>
                    </div>
                    <div style="width:30%; float:right; margin-bottom:20px;">
                        <table width="100%" class="table table-bordered">
                            <tr>
                                <td style="text-align:center; padding:25px; font-size:18px;">
                                    <strong>
                                        <span t-field="o.amount"
                                            t-options="{'widget':'monetary','currency_field':'currency_id'}"/>
                                    </strong>
                                </td>
                            </tr>
                        </table>
                    </div>
<div style="width:65%; float:left; margin-bottom:30px;">

<table width="100%" class="table table-bordered" style="font-size:12px;">

    <tr>
        <td width="20%"><strong>Voucher No</strong></td>
        <td width="30%" style="text-align:center;">
            <span t-esc="o.name"/>
        </td>
        <td width="20%" style="text-align:right;"><strong>التاريخ</strong></td>
        <td width="30%" style="text-align:center;">
            <span t-esc="o.date"/>
        </td>
    </tr>

    <tr>
        <td><strong>Paid To</strong></td>
        <td style="text-align:center;">
            <span t-esc="o.partner_id.display_name"/>
        </td>
        <td style="text-align:right;"><strong>طريقة الدفع</strong></td>
        <td style="text-align:center;">
            <t t-if="o.payment_method == 'cash'">Cash</t>
            <t t-if="o.payment_method == 'cheque'">Cheque</t>
        </td>
    </tr>

    <tr>
        <td><strong>Amount in Words</strong></td>
        <td colspan="3" style="text-align:center; direction:rtl;">
            <span t-esc="o.amount_in_words_ar"/> فقط لا غير
        </td>
    </tr>

    <tr>
        <td><strong>Paid For</strong></td>
        <td colspan="3" style="text-align:center;">
            <span t-esc="o.description"/>
        </td>
    </tr>

</table>

</div>

<div style="clear:both;"></div>

                    <!-- ================= AMOUNT BOX (RIGHT) ================= -->
                    <div style="width:30%; float:right; text-align:center;
                                border:1px solid #000; padding:20px; font-size:16px;">
                        <strong>
                            <span t-field="o.amount"
                                  t-options="{'widget':'monetary','currency_field':'currency_id'}"/>
                        </strong>
                    </div>

                    <!-- ================= MAIN INFO ================= -->
                   <table width="100%" class="table table-bordered" style="font-size:12px;">

                        <!-- Row 1: Voucher No | Date -->
                        <tr>
                            <!-- Left group -->
                            <td width="15%"><strong>Voucher No</strong></td>
                            <td width="25%" style="text-align:center;">
                                <span t-esc="o.name"/>
                            </td>
                            <td width="15%" style="text-align:right;"><strong>رقم السند</strong></td>

                            <!-- Right group -->
                            <td width="15%"><strong>Date</strong></td>
                            <td width="25%" style="text-align:center;">
                                <span t-esc="o.date"/>
                            </td>
                            <td width="15%" style="text-align:right;"><strong>التاريخ</strong></td>
                        </tr>

                        <!-- Row 2: Paid To | Payment Method -->
                        <tr>
                            <!-- Left group -->
                            <td><strong>Paid To</strong></td>
                            <td style="text-align:center;">
                                <span t-esc="o.partner_id.display_name"/>
                            </td>
                            <td style="text-align:right;"><strong>تصرف إلى</strong></td>

                            <!-- Right group -->
                            <td><strong>Payment Method</strong></td>
                            <td style="text-align:center;">
                                <t t-if="o.payment_method == 'cash'">Cash</t>
                                <t t-if="o.payment_method == 'cheque'">Cheque</t>
                            </td>
                            <td style="text-align:right;"><strong>طريقة الدفع</strong></td>
                        </tr>

                        <!-- Row 3: Amount in Words (LEFT ONLY) -->
                        <tr>
                            <td><strong>Amount in Words</strong></td>
                            <td colspan="4" style="text-align:center; direction:rtl;">
                                <span t-esc="o.amount_in_words_ar"/> فقط لا غير
                            </td>
                            <td style="text-align:right;"><strong>المبلغ كتابةً</strong></td>
                        </tr>

                        <!-- Row 4: Paid For (LEFT ONLY) -->
                        <tr>
                            <td><strong>Paid For</strong></td>
                            <td colspan="4" style="text-align:center;">
                                <span t-esc="o.description"/>
                            </td>
                            <td style="text-align:right;"><strong>وذلك مقابل</strong></td>
                        </tr>

                    </table>
                                

                    <!-- ================= SIGNATURES ================= -->
                    <div style="margin-top:70px;">

                        <div style="width:45%; float:left; text-align:center;">
                            <br/><br/>
                            <div style="min-height:70px;"></div>
                            __________________________<br/>
                            <strong>Paid By</strong> 
                        </div>

                        <div style="width:45%; float:right; text-align:center;">
                            <br/><br/>
                            <div style="min-height:70px;"></div>
                            __________________________<br/>
                            <strong>Received By</strong>
                        </div>

                        <div style="clear:both;"></div>
                    </div>

                </div>
            </t>
        </main>
    </t>
</template>

</odoo>
