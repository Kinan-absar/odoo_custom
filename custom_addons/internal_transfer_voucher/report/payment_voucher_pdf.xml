<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="payment_voucher_pdf">
    <t t-call="web.external_layout">
        <main>

<style>

/* ===== Page Base ===== */
.page {
    font-size: 10px;
    line-height: 1.4;
}

/* ===== Title ===== */
.pv-title {
    text-align: center;
    margin-bottom: 45px;
}

.pv-title h2 {
    font-size: 18px;
    margin: 0;
    letter-spacing: 1px;
}

.pv-title h3 {
    font-size: 14px;
    margin: 3px 0 0 0;
}

/* ===== Tables ===== */
table {
    width: 100%;
    border-collapse: collapse;
}

.table-bordered td,
.table-bordered th {
    border: 1px solid #000;
    padding: 6px 8px;
    vertical-align: middle;
}

/* ===== Header Table ===== */
.pv-header-table td {
    font-size: 10px;
}

/* ===== Amount Box ===== */
.amount-box td {
    font-size: 18px;
    font-weight: bold;
    padding: 28px 10px;
    text-align: center;
    background-color: #f3f6f9;   /* soft grey-blue */
    border: 2px solid #637fa9ff;   /* calm corporate blue */
}


/* ===== Main Info Table ===== */
.pv-main-table td {
    font-size: 10px;
}

.pv-main-table tr:nth-child(even) {
    background-color: #fafafa;
}

/* ===== Arabic (right column only) ===== */
/* Labels alignment – keep them visually centered */
.pv-header-table td:first-child,
.pv-main-table td:first-child {
    text-align: center;
    font-weight: 600;
}

.pv-header-table td:last-child,
.pv-main-table td:last-child {
    text-align: center;
    direction: rtl;
    font-weight: 600;
}


/* ===== Signatures ===== */
.signature-block {
    margin-top: 60px;
}

.signature {
    width: 45%;
    text-align: center;
    float: left;
}

.signature.right {
    float: right;
}

.signature .line {
    margin-top: 60px;
    border-top: 1px solid #000;
    width: 80%;
    margin-left: auto;
    margin-right: auto;
}

.signature-label {
    margin-top: 5px;
    font-size: 10px;
}

.clearfix {
    clear: both;
}

</style>

<t t-foreach="docs" t-as="o">
<div class="page">

    <!-- ================= TITLE ================= -->
    <div class="pv-title">
        <h2>PAYMENT VOUCHER</h2>
        <h3>سند صرف</h3>
    </div>

    <!-- ================= TOP STRIP ================= -->

    <!-- Left: Voucher / Date -->
    <div style="width:65%; float:left;">
        <table class="table-bordered pv-header-table">
            <tr>
                <td width="30%"><strong>Voucher No</strong></td>
                <td width="40%" style="text-align:center;">
                    <span t-esc="o.name"/>
                </td>
                <td width="30%"><strong>رقم السند</strong></td>
            </tr>
            <tr>
                <td><strong>Date</strong></td>
                <td style="text-align:center;">
                    <span t-esc="o.date"/>
                </td>
                <td><strong>التاريخ</strong></td>
            </tr>
        </table>
    </div>

    <!-- Right: Amount Box -->
    <div style="width:30%; float:right;">
        <table class="table-bordered amount-box">
            <tr>
                <td>
                    <span t-field="o.amount"
                          t-options="{'widget':'monetary','currency_field':'currency_id'}"/>
                </td>
            </tr>
        </table>
    </div>

    <div class="clearfix"></div>

    <!-- ================= MAIN INFO ================= -->
    <table class="table-bordered pv-main-table" style="margin-top:25px;">

        <tr>
            <td width="25%"><strong>Paid To</strong></td>
            <td width="50%" style="text-align:center;">
                <span t-esc="o.partner_id.display_name"/>
            </td>
            <td width="25%"><strong>تصرف إلى</strong></td>
        </tr>

        <tr>
            <td><strong>Amount in Words</strong></td>
            <td style="text-align:center; direction:rtl;">
                <span t-esc="o.amount_in_words_ar"/> فقط لا غير
            </td>
            <td><strong>المبلغ كتابةً</strong></td>
        </tr>

        <tr>
            <td><strong>Paid For</strong></td>
            <td style="text-align:center;">
                <span t-esc="o.description"/>
            </td>
            <td><strong>وذلك مقابل</strong></td>
        </tr>

        <tr>
            <td><strong>Payment Method</strong></td>
            <td style="text-align:center;">
                <t t-if="o.payment_method == 'cash'">Cash</t>
                <t t-if="o.payment_method == 'cheque'">Cheque</t>
            </td>
            <td><strong>طريقة الدفع</strong></td>
        </tr>

    </table>

    <!-- ================= SIGNATURES ================= -->
    <div class="signature-block">

        <div class="signature">
            <div class="line"></div>
            <div class="signature-label">Paid By</div>
        </div>

        <div class="signature right">
            <div class="line"></div>
            <div class="signature-label">Received By</div>
        </div>

        <div class="clearfix"></div>
    </div>

</div>
</t>

        </main>
    </t>
</template>

</odoo>
