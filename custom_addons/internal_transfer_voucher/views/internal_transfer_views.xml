<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Tree View -->
    <record id="view_internal_transfer_tree" model="ir.ui.view">
        <field name="name">account.internal.transfer.tree</field>
        <field name="model">account.internal.transfer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="source_journal_id"/>
                <field name="destination_journal_id"/>
                <field name="amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_internal_transfer_form" model="ir.ui.view">
        <field name="name">account.internal.transfer.form</field>
        <field name="model">account.internal.transfer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_post"
                            string="Post"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            class="btn-secondary"
                            invisible="state != 'posted'"/>

                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>

                    <group>
                        <group>
                            <field name="date"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="source_journal_id"/>
                            <field name="destination_journal_id"/>
                        </group>
                    </group>

                    <group>
                        <field name="move_id" readonly="1"/>
                    </group>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_internal_transfer" model="ir.actions.act_window">
        <field name="name">Internal Transfers</field>
        <field name="res_model">account.internal.transfer</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
