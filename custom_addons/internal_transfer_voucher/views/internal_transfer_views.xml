<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Tree View -->
    <record id="view_internal_transfer_tree" model="ir.ui.view">
        <field name="name">account.internal.transfer.tree</field>
        <field name="model">account.internal.transfer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="source_journal_id"/>
                <field name="amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_internal_transfer_form" model="ir.ui.view">
        <field name="name">account.internal.transfer.form</field>
        <field name="model">account.internal.transfer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_post"
                            string="Post"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_reset_to_draft"
                            string="Reset to Draft"
                            type="object"
                            invisible="state not in ('posted','cancel')"/>   
                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            invisible="state != 'draft'"/>
                    <button name="%(action_internal_transfer_pdf)d"
                            string="Print"
                            type="action"
                            class="btn-secondary"
                            invisible="state != 'posted'"/>

                    <field name="state" widget="statusbar"/>
                </header>

                <sheet readonly="state == 'posted'">

                    <!-- TITLE -->
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <!-- TOP INFO (COMPACT) -->
                    <group>
                        <group string="Transfer Information">
                            <field name="date"/>
                            <field name="amount"/>
                            <field name="currency_id"
                                groups="base.group_multi_currency"/>
                            <field name="description"
                                placeholder="Add any notes or description..."/>
                        </group>

                        <group string="Accounting">
                            <field name="source_journal_id"/>
                            <field name="state" readonly="1"/>
                        </group>
                    </group>

                    <!-- DESTINATIONS (FOCUS AREA) -->
                    <group string="Destination Journals" colspan="4">
                        <field name="line_ids"
                            nolabel="1"
                            readonly="state == 'posted'">
                            <list editable="bottom" create="1" delete="1">
                                <field name="journal_id"/>
                                <field name="amount"/>
                            </list>
                        </field>

                        <div class="text-muted mt8">
                            Split the transfer amount across one or more destination journals.
                            The total must equal the transfer amount.
                        </div>
                    </group>

                    <!-- FEES + ANALYTICS (SIDE BY SIDE, COMPACT) -->
                    <group>
                        <group string="Bank Fees" readonly="state == 'posted'">
                            <field name="has_bank_fees"/>

                            <field name="fee_amount"
                                invisible="not has_bank_fees"/>

                            <field name="fee_account_id"
                                invisible="not has_bank_fees"/>

                            <field name="fee_tax_id"
                                invisible="not has_bank_fees"/>
                        </group>

                        <group string="Analytic"
                            groups="analytic.group_analytic_accounting" readonly="state == 'posted'">
                            <field name="analytic_distribution"
                                widget="analytic_distribution"
                                options="{'force_applicability': 'optional'}"/>
                        </group>
                    </group>

                    <!-- GENERATED MOVE (COLLAPSED FEEL) -->
                    <group string="Generated Accounting Entry">
                        <field name="move_id"
                            readonly="1"
                            widget="many2one"
                            options="{'no_open': False}"/>
                    </group>

                </sheet>


                <chatter/>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_internal_transfer" model="ir.actions.act_window">
        <field name="name">Internal Transfers</field>
        <field name="res_model">account.internal.transfer</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
