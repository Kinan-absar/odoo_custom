<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- Tree View -->
    <record id="view_internal_transfer_tree" model="ir.ui.view">
        <field name="name">account.internal.transfer.tree</field>
        <field name="model">account.internal.transfer</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date"/>
                <field name="source_journal_id"/>
                <field name="destination_journal_id"/>
                <field name="amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_internal_transfer_form" model="ir.ui.view">
        <field name="name">account.internal.transfer.form</field>
        <field name="model">account.internal.transfer</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_post"
                            string="Post"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_reset_to_draft"
                            string="Reset to Draft"
                            type="object"
                            invisible="state not in ('posted','cancel')"/>   
                    <button name="action_cancel"
                            string="Cancel"
                            type="object"
                            invisible="state != 'draft'"/>
                    <button name="%(action_internal_transfer_pdf)d"
                            string="Print"
                            type="action"
                            class="btn-secondary"
                            invisible="state != 'posted'"/>

                    <field name="state" widget="statusbar"/>
                </header>

                <sheet>
                    <!-- Title -->
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <!-- MAIN INFO -->
                    <group>
                        <group string="Transfer Information">
                            <field name="date"/>
                            <field name="amount"/>
                            <field name="currency_id"
                                groups="base.group_multi_currency"/>
                        </group>

                        <group string="Journals">
                            <field name="source_journal_id"/>
                            <field name="destination_journal_id"/>
                        </group>
                    </group>

                    <separator string="Fees And Analytics"/>

                    <!-- BANK FEES -->
                    <group>
                        <group string="Bank Fees">
                            <field name="has_bank_fees"/>

                            <field name="fee_amount"
                                invisible="not has_bank_fees"/>

                            <field name="fee_account_id"
                                invisible="not has_bank_fees"/>

                            <field name="fee_tax_id"
                                invisible="not has_bank_fees"/>
                        </group>

                        <!-- ANALYTIC -->
                        <group string="Analytic"
                            groups="analytic.group_analytic_accounting">
                            <field name="analytic_distribution"
                                widget="analytic_distribution"
                                options="{'force_applicability': 'optional'}"/>
                        </group>
                    </group>

                    <separator string="Accounting"/>

                    <!-- MOVE -->
                    <group>
                        <field name="move_id"
                            readonly="1"
                            widget="many2one"
                            options="{'no_open': False}"/>
                    </group>

                </sheet>

                <chatter/>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_internal_transfer" model="ir.actions.act_window">
        <field name="name">Internal Transfers</field>
        <field name="res_model">account.internal.transfer</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
