<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="portal_attendance_page" name="Portal Attendance Page">
        <t t-call="employee_portal_suite.employee_portal_layout">
<style>
/* ===== ATTENDANCE LAUNCH STYLE ===== */

.attendance-launch {
    text-decoration: none;
    color: #1F2937;
    transition: 0.2s;
}

.attendance-icon {
    width: 120px;
    height: 120px;
    background: #a08a8aff;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    margin: auto;
    transition: 0.3s;
}

.attendance-icon i {
    font-size: 48px;
    color: white;
}

.attendance-launch:hover .attendance-icon {
    background: #8d5353ff;
    transform: scale(1.05);
}

</style>
            <div class="d-flex justify-content-center align-items-center"
                 style="min-height: 60vh;">

                <a href="https://attendpro-neon.vercel.app"
                   target="_blank"
                   class="attendance-launch text-center">

                    <div class="attendance-icon mb-3">
                        <i class="fa fa-clock-o"></i>
                    </div>

                    <h4>Open Attendance</h4>

                </a>

            </div>

        </t>
    </template>

</odoo>
