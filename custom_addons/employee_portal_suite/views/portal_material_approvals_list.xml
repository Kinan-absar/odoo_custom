<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="portal_material_approvals_list" name="Material Approvals Page">
        <t t-call="employee_portal_suite.employee_portal_layout">
<style>
/* =============================== */
/* MOBILE MATERIAL APPROVAL CARDS */
/* =============================== */

.mobile-approval-card {
    display: block;
    background: white;
    border-radius: 18px;
    padding: 16px;
    margin-bottom: 14px;
    text-decoration: none !important;
    color: inherit;
    box-shadow: 0 6px 20px rgba(0,0,0,0.05);
    transition: transform 0.15s ease, box-shadow 0.2s ease;
}

.mobile-approval-card:active {
    transform: scale(0.97);
}

.mobile-approval-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12px;
}

.mobile-approval-id {
    font-weight: 600;
    font-size: 15px;
}

.mobile-approval-employee {
    font-size: 13px;
    color: #6b7280;
}

.mobile-approval-body {
    display: flex;
    justify-content: space-between;
    font-size: 14px;
}

.mobile-approval-body .label {
    font-size: 11px;
    color: #9ca3af;
}

</style>
            <div class="container mt-4">

    <div class="card shadow-sm border-0">
        <div class="card-body">

            <!-- Header + Filter -->
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mb-3">
                <h4 class="mb-0 fw-semibold">Material Requests Approval</h4>

                <div class="d-flex align-items-center gap-2">
                    <label class="mb-0 fw-semibold small text-muted">Show:</label>
                    <select id="approvalFilter"
                            class="form-select form-select-sm"
                            style="width:auto;">
                        <option value="all" t-att-selected="current_filter == 'all'">All</option>
                        <option value="pending" t-att-selected="current_filter == 'pending'">Pending</option>
                        <option value="approved" t-att-selected="current_filter == 'approved'">Approved</option>
                        <option value="rejected" t-att-selected="current_filter == 'rejected'">Rejected</option>
                    </select>
                </div>
            </div>

            <!-- Table -->
            <!-- DESKTOP TABLE -->
            <div class="table-responsive d-none d-md-block">
                <table class="table table-hover table-sm align-middle mb-0">

                    <thead class="table-light">
                        <tr>
                            <th>Request #</th>
                            <th>Employee</th>
                            <th>Worksite</th>
                            <th>Status</th>
                            <th>Date</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>

                        <t t-if="shown_reqs">
                            <t t-foreach="shown_reqs" t-as="req">
                                <tr>
                                    <td class="fw-semibold">
                                        <t t-esc="req.name"/>
                                    </td>

                                    <td><t t-esc="req.employee_id.name"/></td>
                                    <td><t t-esc="req.worksite"/></td>

                                    <td>
                                        <t t-raw="status_badge(req)"/>
                                    </td>

                                    <td>
                                        <small class="text-muted">
                                            <t t-esc="req.request_date"/>
                                        </small>
                                    </td>

                                    <td class="text-end">
                                        <a t-att-href="'/my/employee/material/approvals/%s' % req.id"
                                        class="btn btn-outline-primary btn-sm">
                                            Review
                                        </a>
                                    </td>
                                </tr>
                            </t>
                        </t>

                        <t t-if="not shown_reqs">
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    No Requests Found.
                                </td>
                            </tr>
                        </t>

                    </tbody>
                </table>
            </div>
            <!-- MOBILE CARD LIST -->
            <div class="d-md-none">

                <t t-if="shown_reqs">
                    <t t-foreach="shown_reqs" t-as="req">

                        <a t-att-href="'/my/employee/material/approvals/%s' % req.id"
                        class="mobile-approval-card">

                            <div class="mobile-approval-top">

                                <div>
                                    <div class="mobile-approval-id">
                                        <t t-esc="req.name"/>
                                    </div>

                                    <div class="mobile-approval-employee">
                                        <t t-esc="req.employee_id.name"/>
                                    </div>
                                </div>

                                <div>
                                    <t t-raw="status_badge(req)"/>
                                </div>

                            </div>

                            <div class="mobile-approval-body">

                                <div>
                                    <span class="label">Worksite</span>
                                    <div><t t-esc="req.worksite"/></div>
                                </div>

                                <div>
                                    <span class="label">Date</span>
                                    <div><t t-esc="req.request_date"/></div>
                                </div>

                            </div>

                        </a>

                    </t>
                </t>

                <t t-if="not shown_reqs">
                    <div class="text-center text-muted py-4">
                        No Requests Found.
                    </div>
                </t>

            </div>


        </div>
    </div>

</div>


            <!-- FILTERING JS -->
            <script>
            document.addEventListener("DOMContentLoaded", function() {
                const filter = document.getElementById("approvalFilter");
                if (!filter) return;
                filter.addEventListener("change", function() {
                    const value = this.value;
                    const url = new URL(window.location.href);
                    url.searchParams.set("filter", value);
                    window.location.href = url.toString();
                });
            });
            </script>

        </t>
    </template>

</odoo>
