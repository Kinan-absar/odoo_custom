<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="employee_requests_page" name="Employee Requests Page">
        <t t-call="employee_portal_suite.employee_portal_layout">

            <div class="container mt-4">

                <div class="card shadow-sm border-0">
                    <div class="card-body">

                        <!-- Header -->
                        <div class="material-header">

                            <!-- Top Row -->
                            <div class="material-header-top">
                                <h4 class="mb-0 fw-semibold">Employee Requests</h4>

                                <a href="/my/employee/requests/new"
                                class="btn btn-primary btn-sm">
                                    + Create New Request
                                </a>
                            </div>

                            <!-- Search Below -->
                            <form method="get" class="material-search-form">
                                <div class="position-relative">
                                    <input type="text"
                                        id="employeeSearchInput"
                                        name="search"
                                        t-att-value="search or ''"
                                        placeholder="Search request #"
                                        class="form-control mobile-search"/>

                                    <button type="submit" class="search-btn">
                                        <i class="fa fa-search"></i>
                                    </button>

                                    <t t-if="search">
                                        <a href="/my/employee/requests"
                                        class="clear-search">
                                            <i class="fa fa-times"></i>
                                        </a>
                                    </t>
                                </div>
                            </form>

                        </div>


                        <!-- Requests Table -->
                        <t t-if="requests">

                            <div class="table-responsive d-none d-md-block">
                                <table class="table table-hover table-sm align-middle mb-0">

                                    <thead class="table-light">
                                        <tr>
                                            <th>Request</th>
                                            <th>Type</th>
                                            <th>Status</th>
                                            <th>Date</th>
                                            <th></th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <t t-foreach="requests" t-as="req">
                                            <tr>

                                                <td class="fw-semibold">
                                                    <t t-esc="req.name"/>
                                                </td>

                                                <td>
                                                    <t t-esc="req.get_request_type_display()"/>
                                                </td>

                                                <td>
                                                    <t t-raw="status_badge(req)"/>
                                                </td>

                                                <td>
                                                    <small class="text-muted">
                                                        <t t-esc="req.request_date"/>
                                                    </small>
                                                </td>

                                                <td class="text-end">
                                                    <a t-att-href="'/my/employee/requests/%s' % req.id"
                                                       class="btn btn-outline-primary btn-sm">
                                                        View
                                                    </a>
                                                </td>

                                            </tr>
                                        </t>
                                    </tbody>

                                </table>
                            </div>
                         <!-- MOBILE CARD LIST -->
                            <div class="d-md-none">
                                <t t-foreach="requests" t-as="req">
                                    <a t-att-href="'/my/employee/requests/%s' % req.id"
                                    class="mobile-request-card">

                                        <div class="mobile-request-top">
                                            <div>
                                                <div class="mobile-request-id">
                                                    <t t-esc="req.name"/>
                                                </div>
                                                <div class="mobile-request-date">
                                                    <t t-esc="req.request_date"/>
                                                </div>
                                            </div>

                                            <div>
                                                <t t-raw="status_badge(req)"/>
                                            </div>
                                        </div>

                                        <div class="mobile-request-body">
                                            <div>
                                                <span class="label">Type</span>
                                                <div>
                                                    <t t-esc="req.get_request_type_display()"/>
                                                </div>
                                            </div>
                                        </div>

                                    </a>
                                </t>
                            </div>


                        </t>

                        <!-- Empty State -->
                        <t t-if="not requests">
                            <div class="text-center text-muted py-4">
                                No requests found.
                            </div>
                        </t>

                    </div>
                </div>

            </div>
        <script>
        document.addEventListener("DOMContentLoaded", function() {

            const input = document.getElementById("employeeSearchInput");
            if (!input) return;

            input.addEventListener("input", function() {
                if (this.value.trim() === "") {
                    window.location.href = "/my/employee/requests";
                }
            });

        });
        </script>

        </t>
    </template>

</odoo>
