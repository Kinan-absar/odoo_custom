<template id="employee_portal_layout">
    <xpath expr="//meta[@name='viewport']" position="replace">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"/>
    </xpath>

    <t t-call="web.layout">
        <style>
            :root {
                --app-primary: #714B67;
                --app-bg: #F8F9FA;
                --card-shadow: 0 2px 8px rgba(0,0,0,0.06);
            }

            /* 2. REMOVE BROWSER FEEL */
            body {
                background-color: var(--app-bg) !important;
                font-size: 16px !important; /* Prevents auto-zoom on inputs */
                overflow-x: hidden;
            }

            /* 3. FULL WIDTH CONTAINER */
            .container {
                max-width: 100% !important;
                padding-left: 16px !important;
                padding-right: 16px !important;
            }

            /* 4. APP-STYLE CARDS (Stacking instead of Grids) */
            .o_portal_category {
                display: flex !important;
                flex-direction: column !important; /* Stack vertically on mobile */
                gap: 12px;
                margin-top: 10px;
            }

            /* Target the cards in your screenshot */
            .card, .list-group-item {
                border: none !important;
                border-radius: 12px !important;
                box-shadow: var(--card-shadow);
                width: 100% !important; /* Take up the whole screen width */
                margin-bottom: 8px;
            }

            /* 5. BIG "TAPABLE" BUTTONS */
            .btn {
                height: 48px !important; /* Native app button height */
                display: flex;
                align-items: center;
                justify-content: center;
                font-weight: 600 !important;
                border-radius: 10px !important;
                font-size: 15px !important;
            }

            /* 6. FIXED HEADER IMPROVEMENT */
            .app-header {
                background: #fff;
                padding: 12px 16px;
                border-bottom: 1px solid #eee;
                position: sticky;
                top: 0;
                z-index: 1000;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            /* 7. THE BOTTOM NAV (AS SHOWN IN YOUR SCREENSHOT) */
            .app-nav {
                position: fixed;
                bottom: 0;
                width: 100%;
                height: 70px;
                background: #fff;
                border-top: 1px solid #ddd;
                display: flex;
                justify-content: space-around;
                align-items: center;
                padding-bottom: env(safe-area-inset-bottom);
                z-index: 1050;
            }
        </style>

        <div class="app-header">
            <span class="fw-bold fs-4">Portal</span>
            <div class="d-flex align-items-center gap-3">
                <i class="fa fa-bell-o fs-5 text-muted"></i>
                <img t-att-src="image_data_uri(request.env.user.partner_id.avatar_128)" class="rounded-circle" width="34"/>
            </div>
        </div>

        <main class="app-content mt-2">
            <div class="container">
                <t t-raw="0"/>
            </div>
        </main>

        <nav class="app-nav">
             <a href="/my" class="text-decoration-none text-center">
                <i class="fa fa-home d-block fs-4 text-primary"></i>
                <span style="font-size: 10px;" class="text-primary">Home</span>
            </a>
            <div class="fab-placeholder" style="margin-top: -40px;">
                 <a href="/new" class="btn btn-primary rounded-circle" style="width: 56px; height: 56px;">
                    <i class="fa fa-plus"></i>
                 </a>
            </div>
            <a href="/my/approvals" class="text-decoration-none text-center text-muted">
                <i class="fa fa-check-circle-o d-block fs-4"></i>
                <span style="font-size: 10px;">Approvals</span>
            </a>
        </nav>
    </t>
</template>