<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="employee_portal_layout">

    <xpath expr="//meta[@name='viewport']" position="replace">

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"/>

    </xpath>
        <t t-call="web.layout">
            <style>
                :root {
                    --app-primary: #714B67;
                    --app-bg: #F8F9FA;
                    --card-shadow: 0 4px 12px rgba(0,0,0,0.08);
                }

                body { background-color: var(--app-bg) !important; font-family: 'Inter', sans-serif; }

                /* ================= DESKTOP STYLING (Professional) ================= */
                @media (min-width: 769px) {
                    .ep-navbar {
                        display: flex; align-items: center; justify-content: space-between;
                        padding: 0 2rem; height: 70px; background: #fff;
                        border-bottom: 1px solid #E5E7EB; position: sticky; top: 0; z-index: 1000;
                    }
                    .mobile-only { display: none !important; }
                }

                .ep-nav-links { display: flex; align-items: center; gap: 8px; }
                .ep-link, .ep-dropdown-toggle {
                    background: transparent; border: none; padding: 10px 16px;
                    border-radius: 8px; font-size: 15px; font-weight: 500;
                    color: #1F2937; cursor: pointer; text-decoration: none !important;
                }
                .ep-link:hover, .ep-dropdown-toggle:hover { background: #EBECF0; color: var(--app-primary); }

                /* Desktop Dropdowns */
                .ep-dropdown { position: relative; }
                .ep-dropdown-menu {
                    display: none; position: absolute; top: 45px; left: 0;
                    min-width: 240px; background: white; border: 1px solid #E2E8F0;
                    border-radius: 10px; padding: 8px; box-shadow: 0 10px 25px rgba(0,0,0,0.1); z-index: 2000;
                }
                .ep-sub-link { display: block; padding: 10px 16px; color: #1F2937; text-decoration: none !important; font-size: 14px; border-radius: 6px; }
                .ep-sub-link:hover { background: #F3F4F6; }

                /* ================= MOBILE STYLING (True App Design) ================= */
                @media (max-width: 768px) {
                    .ep-navbar { display: none !important; }
                    
                    /* Force cards to be app-tiles */
                    .container { max-width: 100% !important; padding: 16px !important; }
                    
                    
                    .card {
                        border: none !important; border-radius: 16px !important;
                        box-shadow: var(--card-shadow) !important; margin-bottom: 16px !important;
                    }

                    .mobile-app-header {
                        display: flex; justify-content: space-between; align-items: center;
                        padding: 15px 20px; background: #fff; border-bottom: 1px solid #eee;
                    }

                    
                    .nav-btn { color: #9CA3AF; text-align: center; text-decoration: none !important; flex: 1; }
                    .nav-btn.active { color: var(--app-primary); }
                    .nav-btn i { font-size: 24px; display: block; margin-bottom: 2px; }
                    .nav-btn span { font-size: 10px; font-weight: 600; }
                    
                    .fab-menu {
                        position: fixed;
                        bottom: 90px;
                        left: 50%;
                        transform: translateX(-50%);
                        background: white;
                        border-radius: 16px;
                        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
                        padding: 10px 0;
                        display: none;
                        width: 250px;
                        z-index: 2100;
                    }

                    .fab-menu.show {
                        display: block;
                    }

                    .fab-item {
                        display: block;
                        padding: 12px 16px;
                        text-decoration: none !important;
                        color: #1F2937;
                        font-weight: 500;
                    }

                    .fab-item:hover {
                        background: #F3F4F6;
                    }

                }
                

                /* Pop animation */
                @keyframes navPop {
                    0% { transform: scale(1); }
                    50% { transform: scale(1.2); }
                    100% { transform: scale(1); }
                }
                

                /* ======================= */
                /* CENTER PLUS UPGRADE     */
                /* ======================= */

                
                .mobile-search {
                    border-radius: 14px;
                    padding: 8px 38px 8px 14px;
                    border: 1px solid #e5e7eb;
                    font-size: 14px;
                }

                .mobile-search:focus {
                    border-color: var(--app-primary);
                    box-shadow: 0 0 0 3px rgba(113,75,103,0.1);
                }

                .search-btn {
                    position: absolute;
                    right: 10px;
                    top: 50%;
                    transform: translateY(-50%);
                    background: none;
                    border: none;
                    color: #9ca3af;
                }
                /* =============================== */
                /* CLEAN PREMIUM FLOATING NAV     */
                /* =============================== */

                .ep-bottom-nav {
                    position: fixed;
                    bottom: 0;
                    left: 0;
                    right: 0;

                    height: 92px;
                    padding: 14px 12px calc(14px + env(safe-area-inset-bottom));

                    display: flex;
                    justify-content: space-around;
                    align-items: center;

                    background: rgba(255,255,255,0.97);
                    backdrop-filter: blur(18px);
                    -webkit-backdrop-filter: blur(18px);

                    border-top-left-radius: 26px;
                    border-top-right-radius: 26px;

                    box-shadow: 0 -10px 35px rgba(0,0,0,0.08);
                    z-index: 3000;
                }

                /* Prevent content hiding under nav */
                main {
                    padding-bottom: 130px;
                }

                /* Nav items */
                .ep-bottom-nav .nav-btn {
                    flex: 1;
                    text-align: center;
                    text-decoration: none !important;
                    font-size: 11px;
                    font-weight: 500;
                    color: #9CA3AF;
                    transition: all 0.2s ease;
                }

                /* Icons */
                .ep-bottom-nav .nav-btn i {
                    display: block;
                    font-size: 22px;
                    margin-bottom: 3px;
                    transition: transform 0.2s ease;
                }

                /* Press animation */
                .ep-bottom-nav .nav-btn:active {
                    transform: scale(0.9);
                }

                /* Active */
                .ep-bottom-nav .nav-btn.active {
                    color: var(--app-primary);
                }

                .ep-bottom-nav .nav-btn.active i {
                    transform: translateY(-3px);
                }

                /* ================= */
                /* CENTER PLUS CLEAN */
                /* ================= */

                .ep-bottom-nav .fab-plus {
                    width: 60px;
                    height: 60px;
                    background: var(--app-primary);
                    border-radius: 50%;

                    display: flex;
                    align-items: center;
                    justify-content: center;

                    margin-top: -35px;

                    box-shadow: 0 12px 30px rgba(0,0,0,0.18);
                    transition: all 0.2s ease;
                }

                .ep-bottom-nav .fab-plus i {
                    font-size: 24px;
                    color: white;
                }

                .ep-bottom-nav .nav-btn:active .fab-plus {
                    transform: scale(0.9);
                }
                /* Lift icons slightly */
                .ep-bottom-nav .nav-btn {
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: center;
                    margin-bottom: 6px;   /* ðŸ”¥ this lifts everything up */
                }
                /* ========================= */
                /* MOBILE REQUEST LIST STYLE */
                /* ========================= */

                .mobile-request-card {
                    display: block;
                    background: white;
                    border-radius: 18px;
                    padding: 16px;
                    margin-bottom: 14px;
                    text-decoration: none !important;
                    color: inherit;
                    box-shadow: 0 6px 20px rgba(0,0,0,0.05);
                    transition: transform 0.15s ease, box-shadow 0.2s ease;
                }

                .mobile-request-card:active {
                    transform: scale(0.97);
                }

                .mobile-request-top {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    margin-bottom: 12px;
                }

                .mobile-request-id {
                    font-weight: 600;
                    font-size: 15px;
                }

                .mobile-request-date {
                    font-size: 12px;
                    color: #6b7280;
                }

                .mobile-request-body {
                    display: flex;
                    justify-content: space-between;
                    font-size: 14px;
                }

                .mobile-request-body .label {
                    font-size: 11px;
                    color: #9ca3af;
                }
                /* ========================= */
                /* MATERIAL HEADER LAYOUT   */
                /* ========================= */

                .material-header {
                    margin-bottom: 20px;
                }

                .material-header-top {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    gap: 12px;
                    flex-wrap: wrap;
                }

                .material-search-form {
                    margin-top: 12px;
                }

                .clear-search {
                    position: absolute;
                    right: 38px;
                    top: 50%;
                    transform: translateY(-50%);
                    color: #9ca3af;
                    text-decoration: none;
                    font-size: 14px;
                }

                @media (max-width: 768px) {
                    .material-header-top {
                        flex-direction: column;
                        align-items: flex-start;
                    }

                    .material-header-top .btn {
                        width: 100%;
                    }
                }



            </style>

            <t t-call-assets="web.assets_frontend"/>

            <nav class="ep-navbar">
                <div class="ep-nav-links">
                    <a href="/my" class="ep-link">Dashboard</a>
                    <div class="ep-dropdown">
                        <button class="ep-dropdown-toggle" onclick="toggleDropdown(event, 'req-d')">Requests â–¾</button>
                        <div id="req-d" class="ep-dropdown-menu">
                            <a href="/my/employee/requests" class="ep-sub-link">Employee Requests</a>
                            <a href="/my/employee/requests/new" class="ep-sub-link text-primary">+ New Employee Request</a>
                            <hr class="my-1"/>
                            <a href="/my/employee/material" class="ep-sub-link">Material Requests</a>
                            <a href="/my/employee/material/new" class="ep-sub-link text-primary">+ New Material Request</a>
                        </div>
                    </div>

                    <t t-if="
                        request.env.user.has_group('employee_portal_suite.group_employee_portal_manager')
                        or request.env.user.has_group('employee_portal_suite.group_employee_portal_hr')
                        or request.env.user.has_group('employee_portal_suite.group_employee_portal_finance')
                        or request.env.user.has_group('employee_portal_suite.group_employee_portal_ceo')
                        or request.env.user.has_group('employee_portal_suite.group_mr_purchase_rep')
                        or request.env.user.has_group('employee_portal_suite.group_mr_store_manager')
                        or request.env.user.has_group('employee_portal_suite.group_mr_project_manager')
                        or request.env.user.has_group('employee_portal_suite.group_mr_projects_director')
                    ">

                        <div class="ep-dropdown">

                            <button class="ep-dropdown-toggle"
                                    onclick="toggleDropdown(event, 'app-d')">
                                Approvals â–¾
                            </button>

                            <div id="app-d" class="ep-dropdown-menu">

                                <!-- Employee Approvals -->
                                <t t-if="
                                    request.env.user.has_group('employee_portal_suite.group_employee_portal_manager')
                                    or request.env.user.has_group('employee_portal_suite.group_employee_portal_hr')
                                    or request.env.user.has_group('employee_portal_suite.group_employee_portal_finance')
                                    or request.env.user.has_group('employee_portal_suite.group_employee_portal_ceo')
                                ">
                                    <a href="/my/employee/approvals" class="ep-sub-link">
                                        Employee Approvals
                                    </a>
                                </t>

                                <!-- Material Approvals -->
                                <t t-if="
                                    request.env.user.has_group('employee_portal_suite.group_mr_purchase_rep')
                                    or request.env.user.has_group('employee_portal_suite.group_mr_store_manager')
                                    or request.env.user.has_group('employee_portal_suite.group_mr_project_manager')
                                    or request.env.user.has_group('employee_portal_suite.group_mr_projects_director')
                                    or request.env.user.has_group('employee_portal_suite.group_employee_portal_ceo')
                                ">
                                    <a href="/my/employee/material/approvals" class="ep-sub-link">
                                        Material Approvals
                                    </a>
                                </t>

                            </div>

                        </div>

                    </t>

                    
                    <t t-if="request.env.user.has_group('petty_cash_management.group_portal_petty_cash_user')">
                        <a href="/my/petty-cash" class="ep-link">Petty Cash</a>
                    </t>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <div class="text-end d-none d-lg-block">
                        <h6 class="mb-0 fw-bold" t-out="request.env.user.partner_id.name"/>
                        <p class="mb-0 text-muted small" t-out="request.env.user.partner_id.company_name"/>
                    </div>
                    <img t-att-src="image_data_uri(request.env.user.partner_id.avatar_128)" class="rounded-circle border" width="40" height="40"/>
                    <a href="/web/session/logout" class="btn btn-sm btn-outline-danger ms-2">Logout</a>
                </div>
            </nav>
            <t t-if="request.httprequest.path == '/my/employee'">
            <div class="mobile-app-header mobile-only">
                <div>
                    <div class="fw-bold" style="font-size:14px; color:#6b7280;">
                        Welcome back,
                    </div>
                    <div class="fw-bold fs-5" style="color: var(--app-primary);">
                        <t t-esc="request.env.user.partner_id.name.split(' ')[0]"/>
                    </div>
                </div>

                <img t-att-src="image_data_uri(request.env.user.partner_id.avatar_128)"
                    class="rounded-circle"
                    width="36"
                    height="36"/>
            </div>
            </t>

            <main>
                <div id="wrap" class="container mt-3 mb-5">
                    <t t-raw="0"/>
                </div>
            </main>

            <nav class="ep-bottom-nav mobile-only">

                <!-- HOME -->
                <a href="/my/employee"
                t-att-class="
                    'nav-btn active'
                    if request.httprequest.path == '/my/employee'
                    else 'nav-btn'
                ">
                    <i class="fa fa-home"></i>
                    <span>Home</span>
                </a>


                <!-- EMPLOYEE REQUESTS -->
                <a href="/my/employee/requests"
                t-att-class="'nav-btn active' if request.httprequest.path.startswith('/my/employee/requests') else 'nav-btn'">
                    <i class="fa fa-file-text-o"></i>
                    <span>Employee</span>
                </a>

                <!-- MATERIAL REQUESTS -->
                <a href="/my/employee/material"
                t-att-class="'nav-btn active' if request.httprequest.path.startswith('/my/employee/material') and not request.httprequest.path.startswith('/my/employee/material/approvals') else 'nav-btn'">
                    <i class="fa fa-cubes"></i>
                    <span>Material</span>
                </a>

                <!-- PLUS BUTTON (New Menu Toggle) -->
                <div class="nav-btn" onclick="toggleFabMenu()">
                    <div class="fab-plus">
                        <i class="fa fa-plus" style="margin:0"></i>
                    </div>
                </div>

          <t t-if="
                    request.env.user.has_group('employee_portal_suite.group_employee_portal_manager')
                    or request.env.user.has_group('employee_portal_suite.group_employee_portal_hr')
                    or request.env.user.has_group('employee_portal_suite.group_employee_portal_finance')
                    or request.env.user.has_group('employee_portal_suite.group_employee_portal_ceo')
                    or request.env.user.has_group('employee_portal_suite.group_mr_purchase_rep')
                    or request.env.user.has_group('employee_portal_suite.group_mr_store_manager')
                    or request.env.user.has_group('employee_portal_suite.group_mr_project_manager')
                    or request.env.user.has_group('employee_portal_suite.group_mr_projects_director')
                ">

                    <div id="approvalBtn"
                        t-att-class="'nav-btn active' if request.httprequest.path.startswith('/my/employee/approvals') or request.httprequest.path.startswith('/my/employee/material/approvals') else 'nav-btn'"
                        onclick="toggleApprovalMenu()">

                        <i class="fa fa-check-circle-o"></i>
                        <span>Approvals</span>

                    </div>


                    <div id="approvalMenu" class="fab-menu">

                        <!-- Employee Approvals -->
                        <t t-if="
                            request.env.user.has_group('employee_portal_suite.group_employee_portal_manager')
                            or request.env.user.has_group('employee_portal_suite.group_employee_portal_hr')
                            or request.env.user.has_group('employee_portal_suite.group_employee_portal_finance')
                            or request.env.user.has_group('employee_portal_suite.group_employee_portal_ceo')
                        ">
                            <a href="/my/employee/approvals" class="fab-item">
                                <i class="fa fa-user"></i>
                                <span>Employee Approvals</span>
                            </a>
                        </t>

                        <!-- Material Approvals -->
                        <t t-if="
                            request.env.user.has_group('employee_portal_suite.group_mr_purchase_rep')
                            or request.env.user.has_group('employee_portal_suite.group_mr_store_manager')
                            or request.env.user.has_group('employee_portal_suite.group_mr_project_manager')
                            or request.env.user.has_group('employee_portal_suite.group_mr_projects_director')
                            or request.env.user.has_group('employee_portal_suite.group_employee_portal_ceo')
                        ">
                            <a href="/my/employee/material/approvals" class="fab-item">
                                <i class="fa fa-cubes"></i>
                                <span>Material Approvals</span>
                            </a>
                        </t>

                    </div>

                </t>


                <!-- PETTY CASH (GROUP CONTROLLED) -->
                <t t-if="request.env.user.has_group('petty_cash_management.group_portal_petty_cash_user')">
                    <a href="/my/petty-cash"
                    t-att-class="'nav-btn active' if request.httprequest.path.startswith('/my/petty-cash') else 'nav-btn'">
                        <i class="fa fa-money"></i>
                        <span>Cash</span>
                    </a>
                </t>

                <!-- LOGOUT -->
                <a href="/web/session/logout" class="nav-btn">
                    <i class="fa fa-sign-out"></i>
                    <span>Exit</span>
                </a>

            </nav>
            
            <!-- FAB MENU (Single Instance) -->
            <div id="fabMenu" class="fab-menu mobile-only">

                <a href="/my/employee/requests/new" class="fab-item">
                    <i class="fa fa-file-text-o"></i>
                    <span>New Employee Request</span>
                </a>

                <a href="/my/employee/material/new" class="fab-item">
                    <i class="fa fa-cubes"></i>
                    <span>New Material Request</span>
                </a>

            </div>



        <script>
            function toggleDropdown(event, id) {
                event.stopPropagation();
                document.querySelectorAll('.ep-dropdown-menu').forEach(function(m){
                    if (m.id !== id) m.style.display = 'none';
                });

                var menu = document.getElementById(id);
                if (menu) {
                    if (menu.style.display === 'block') {
                        menu.style.display = 'none';
                    } else {
                        menu.style.display = 'block';
                    }
                }
            }

            function toggleFabMenu() {
                var menu = document.getElementById('fabMenu');
                if (menu) {
                    if (menu.classList.contains('show')) {
                        menu.classList.remove('show');
                    } else {
                        menu.classList.add('show');
                    }
                }
            }

            function toggleApprovalMenu() {
                var menu = document.getElementById('approvalMenu');
                if (menu) {
                    if (menu.classList.contains('show')) {
                        menu.classList.remove('show');
                    } else {
                        menu.classList.add('show');
                    }
                }
            }

            document.addEventListener('click', function(e){

                // Close dropdown menus
                document.querySelectorAll('.ep-dropdown-menu').forEach(function(m){
                    m.style.display = 'none';
                });

                var fab = document.getElementById('fabMenu');
                if (fab) {
                    if (!e.target.closest('.fab-plus')) {
                        if (!e.target.closest('#fabMenu')) {
                            fab.classList.remove('show');
                        }
                    }
                }

                var app = document.getElementById('approvalMenu');
                if (app) {
                    if (!e.target.closest('#approvalMenu')) {
                        if (!e.target.closest('#approvalBtn')) {
                            app.classList.remove('show');
                        }
                    }
                }


            });
        </script>

        </t>
    </template>
</odoo>