        <t t-call="web.layout">
            <style>
                :root {
                    --app-primary: #714B67;
                    --app-bg: #F8F9FA;
                    --card-shadow: 0 4px 12px rgba(0,0,0,0.08);
                }

                body { background-color: var(--app-bg) !important; font-family: 'Inter', sans-serif; }

                /* ================= DESKTOP STYLING (Professional) ================= */
                @media (min-width: 769px) {
                    .ep-navbar {
                        display: flex; align-items: center; justify-content: space-between;
                        padding: 0 2rem; height: 70px; background: #fff;
                        border-bottom: 1px solid #E5E7EB; position: sticky; top: 0; z-index: 1000;
                    }
                    .mobile-only { display: none !important; }
                }

                .ep-nav-links { display: flex; align-items: center; gap: 8px; }
                .ep-link, .ep-dropdown-toggle {
                    background: transparent; border: none; padding: 10px 16px;
                    border-radius: 8px; font-size: 15px; font-weight: 500;
                    color: #1F2937; cursor: pointer; text-decoration: none !important;
                }
                .ep-link:hover, .ep-dropdown-toggle:hover { background: #EBECF0; color: var(--app-primary); }

                /* Desktop Dropdowns */
                .ep-dropdown { position: relative; }
                .ep-dropdown-menu {
                    display: none; position: absolute; top: 45px; left: 0;
                    min-width: 240px; background: white; border: 1px solid #E2E8F0;
                    border-radius: 10px; padding: 8px; box-shadow: 0 10px 25px rgba(0,0,0,0.1); z-index: 2000;
                }
                .ep-sub-link { display: block; padding: 10px 16px; color: #1F2937; text-decoration: none !important; font-size: 14px; border-radius: 6px; }
                .ep-sub-link:hover { background: #F3F4F6; }

                /* ================= MOBILE STYLING (True App Design) ================= */
                @media (max-width: 768px) {
                    .ep-navbar { display: none !important; }
                    
                    /* Force cards to be app-tiles */
                    .container { max-width: 100% !important; padding: 16px !important; }
                    
                    
                    .card {
                        border: none !important; border-radius: 16px !important;
                        box-shadow: var(--card-shadow) !important; margin-bottom: 16px !important;
                    }

                    .mobile-app-header {
                        display: flex; justify-content: space-between; align-items: center;
                        padding: 15px 20px; background: #fff; border-bottom: 1px solid #eee;
                    }

                    
                    .nav-btn { color: #9CA3AF; text-align: center; text-decoration: none !important; flex: 1; }
                    .nav-btn.active { color: var(--app-primary); }
                    .nav-btn i { font-size: 24px; display: block; margin-bottom: 2px; }
                    .nav-btn span { font-size: 10px; font-weight: 600; }
                    
                    .fab-menu {
                        position: fixed;
                        bottom: 90px;
                        left: 50%;
                        transform: translateX(-50%);
                        background: white;
                        border-radius: 16px;
                        box-shadow: 0 10px 25px rgba(0,0,0,0.15);
                        padding: 10px 0;
                        display: none;
                        width: 250px;
                        z-index: 2100;
                    }

                    .fab-menu.show {
                        display: block;
                    }

                    .fab-item {
                        display: block;
                        padding: 12px 16px;
                        text-decoration: none !important;
                        color: #1F2937;
                        font-weight: 500;
                    }

                    .fab-item:hover {
                        background: #F3F4F6;
                    }

                }
                

                /* Pop animation */
                @keyframes navPop {
                    0% { transform: scale(1); }
                    50% { transform: scale(1.2); }
                    100% { transform: scale(1); }
                }
                

                /* ======================= */
                /* CENTER PLUS UPGRADE     */
                /* ======================= */

                
                .mobile-search {
                    border-radius: 14px;
                    padding: 8px 38px 8px 14px;
                    border: 1px solid #e5e7eb;
                    font-size: 14px;
                }

                .mobile-search:focus {
                    border-color: var(--app-primary);
                    box-shadow: 0 0 0 3px rgba(113,75,103,0.1);
                }

                .search-btn {
                    position: absolute;
                    right: 10px;
                    top: 50%;
                    transform: translateY(-50%);
                    background: none;
                    border: none;
                    color: #9ca3af;
                }
               /* =============================== */
                /* PREMIUM BOTTOM NAV - REDESIGNED */
                /* =============================== */

                /* Prevent content hiding under nav */
                main {
                    padding-bottom: 110px;
                }

                .ep-bottom-nav {
                    position: fixed;
                    bottom: 0;
                    left: 0;
                    right: 0;
                    height: 80px;
                    padding-bottom: env(safe-area-inset-bottom);
                    background: #fff;
                    border-top: 1px solid rgba(0,0,0,0.06);
                    border-top-left-radius: 24px;
                    border-top-right-radius: 24px;
                    box-shadow: 0 -4px 30px rgba(0,0,0,0.08);
                    z-index: 3000;

                    display: flex;
                    align-items: center;
                    justify-content: space-around;
                    padding-top: 0;
                }

                /* ---- NAV ITEMS ---- */
                .ep-bottom-nav .nav-btn {
                    flex: 1;
                    display: flex;
                    flex-direction: column;
                    align-items: center;
                    justify-content: center;
                    height: 100%;
                    text-decoration: none !important;
                    color: #B0B7C3;
                    font-size: 10px;
                    font-weight: 600;
                    letter-spacing: 0.3px;
                    gap: 4px;
                    cursor: pointer;
                    border: none;
                    background: transparent;
                    position: relative;
                    transition: color 0.2s ease;
                    -webkit-tap-highlight-color: transparent;
                }

                .ep-bottom-nav .nav-btn i {
                    font-size: 20px;
                    line-height: 1;
                    transition: transform 0.25s cubic-bezier(0.34, 1.56, 0.64, 1), color 0.2s ease;
                }

                /* Tap ripple effect */
                .ep-bottom-nav .nav-btn::after {
                    content: '';
                    position: absolute;
                    width: 40px;
                    height: 40px;
                    border-radius: 50%;
                    background: var(--app-primary);
                    opacity: 0;
                    top: 50%;
                    left: 50%;
                    transform: translate(-50%, -50%) scale(0);
                    transition: transform 0.3s ease, opacity 0.3s ease;
                }

                .ep-bottom-nav .nav-btn:active::after {
                    opacity: 0.08;
                    transform: translate(-50%, -50%) scale(1.4);
                }

                /* ---- ACTIVE STATE - Pill indicator ---- */
                .ep-bottom-nav .nav-btn.active {
                    color: var(--app-primary);
                }

                .ep-bottom-nav .nav-btn.active i {
                    transform: translateY(-2px) scale(1.15);
                }

                /* Active top pill indicator */
                .ep-bottom-nav .nav-btn.active::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 28px;
                    height: 3px;
                    background: var(--app-primary);
                    border-radius: 0 0 4px 4px;
                }

                /* ---- CENTER FAB BUTTON ---- */
                .ep-bottom-nav .nav-center {
                    flex: 1;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    height: 100%;
                    position: relative;
                    cursor: pointer;
                    -webkit-tap-highlight-color: transparent;
                    background: transparent;
                    border: none;
                }

                /* Notch dip behind FAB */
                .ep-bottom-nav .nav-center::before {
                    content: '';
                    position: absolute;
                    top: -22px;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 72px;
                    height: 44px;
                    background: #fff;
                    border-radius: 50% 50% 0 0 / 100% 100% 0 0;
                    box-shadow: 0 -6px 0 #fff;
                    z-index: -1;
                }

                .ep-bottom-nav .fab-plus {
                    width: 58px;
                    height: 58px;
                    background: linear-gradient(135deg, #8B5E7A 0%, var(--app-primary) 60%, #5A3650 100%);
                    border-radius: 18px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    box-shadow:
                        0 8px 20px rgba(113,75,103,0.45),
                        0 2px 6px rgba(113,75,103,0.2);
                    transition:
                        transform 0.2s cubic-bezier(0.34, 1.56, 0.64, 1),
                        box-shadow 0.2s ease;
                    position: absolute;
                    top: -28px;
                }

                .ep-bottom-nav .fab-plus i {
                    font-size: 22px;
                    color: #fff;
                    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
                }

                /* FAB hover/active states */
                .ep-bottom-nav .nav-center:hover .fab-plus {
                    transform: translateY(-3px);
                    box-shadow:
                        0 14px 28px rgba(113,75,103,0.5),
                        0 4px 10px rgba(113,75,103,0.25);
                }

                .ep-bottom-nav .nav-center:active .fab-plus {
                    transform: scale(0.91);
                    box-shadow:
                        0 4px 12px rgba(113,75,103,0.35),
                        0 2px 4px rgba(113,75,103,0.2);
                }

                /* Rotate plus icon when FAB menu is open */
                .ep-bottom-nav .nav-center.fab-open .fab-plus i {
                    transform: rotate(45deg);
                }

                /* ========================= */
                /* MOBILE REQUEST LIST STYLE */
                /* ========================= */

                .mobile-request-card {
                    display: block;
                    background: white;
                    border-radius: 18px;
                    padding: 16px;
                    margin-bottom: 14px;
                    text-decoration: none !important;
                    color: inherit;
                    box-shadow: 0 6px 20px rgba(0,0,0,0.05);
                    transition: transform 0.15s ease, box-shadow 0.2s ease;
                }

                .mobile-request-card:active {
                    transform: scale(0.97);
                }

                .mobile-request-top {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    margin-bottom: 12px;
                }

                .mobile-request-id {
                    font-weight: 600;
                    font-size: 15px;
                }

                .mobile-request-date {
                    font-size: 12px;
                    color: #6b7280;
                }

                .mobile-request-body {
                    display: flex;
                    justify-content: space-between;
                    font-size: 14px;
                }

                .mobile-request-body .label {
                    font-size: 11px;
                    color: #9ca3af;
                }
                /* ========================= */
                /* MATERIAL HEADER LAYOUT   */
                /* ========================= */

                .material-header {
                    margin-bottom: 20px;
                }

                .material-header-top {
                    display: flex;
                    justify-content: space-between;
                    align-items: center;
                    gap: 12px;
                    flex-wrap: wrap;
                }

                .material-search-form {
                    margin-top: 12px;
                }

                .clear-search {
                    position: absolute;
                    right: 38px;
                    top: 50%;
                    transform: translateY(-50%);
                    color: #9ca3af;
                    text-decoration: none;
                    font-size: 14px;
                }

                @media (max-width: 768px) {
                    .material-header-top {
                        flex-direction: column;
                        align-items: flex-start;
                    }

                    .material-header-top .btn {
                        width: 100%;
                    }
                }
                /* ========================= */
                /* TIMELINE CSS              */
                /* ========================= */
                .employee-req-detail {
                    font-size: 14px;
                }
                .employee-req-detail .card {
                    border: none;
                }
                .employee-req-detail .timeline {
                    list-style: none;
                    padding-left: 20px;
                    position: relative;
                }
                .employee-req-detail .timeline:before {
                    content: "";
                    position: absolute;
                    top: 0;
                    bottom: 0;
                    width: 2px;
                    background: #e5e5e5;
                    left: 8px;
                }
                .employee-req-detail .timeline-marker {
                    position: absolute;
                    width: 14px;
                    height: 14px;
                    background: #0d6efd;
                    border-radius: 50%;
                    left: 1px;
                    top: 6px;
                }
                .employee-req-detail .timeline-content {
                    margin-left: 25px;
                }
                /* ========================= */
                /* attachment                */
                /* ========================= */
                .attachment-icon-btn {
                    display: inline-flex;
                    align-items: center;
                    justify-content: center;
                    width: 32px;
                    height: 32px;
                    border-radius: 8px;
                    border: 1px solid #e5e7eb;
                    background: white;
                    text-decoration: none !important;
                    transition: all 0.15s ease;
                }

                .attachment-icon-btn i {
                    font-size: 14px;
                    line-height: 1;
                }

                .attachment-icon-btn:hover {
                    background: #f3f4f6;
                }
                .delete-confirmation .confirm-box {
                    background: #fff5f5;
                    border: 1px solid #fecaca;
                }

                .delete-confirmation .btn-danger {
                    background: #dc2626;
                    border: none;
                }

                .delete-confirmation .btn-light {
                    background: #f3f4f6;
                    border: none;
                }


            </style>

