<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<template id="portal_sign_documents_page">
    <t t-call="employee_portal_suite.employee_portal_layout">

        <div class="container mt-4">

            <h3>Documents to Sign</h3>

            <!-- FILTER BUTTONS -->
            <div class="btn-group mt-3 mb-3">
                <a href="/my/employee/sign?filter=pending"
                   t-att-class="'btn btn-sm ' + ('btn-primary' if current_filter=='pending' else 'btn-outline-primary')">
                    Pending
                </a>
                <a href="/my/employee/sign?filter=signed"
                   t-att-class="'btn btn-sm ' + ('btn-success' if current_filter=='signed' else 'btn-outline-success')">
                    Signed
                </a>
                <a href="/my/employee/sign?filter=rejected"
                   t-att-class="'btn btn-sm ' + ('btn-danger' if current_filter=='rejected' else 'btn-outline-danger')">
                    Rejected
                </a>
            </div>
            <form method="get" class="sign-search-form">
                <input type="hidden" name="filter" t-att-value="current_filter"/>

                <div class="position-relative">

                    <input type="text"
                        id="signSearchInput"
                        name="search"
                        t-att-value="search or ''"
                        placeholder="Search document..."
                        class="form-control mobile-search"/>

                    <button type="submit" class="search-btn">
                        <i class="fa fa-search"></i>
                    </button>

                    <t t-if="search">
                        <a t-att-href="'/my/employee/sign?filter=%s' % current_filter"
                        class="clear-search">
                            <i class="fa fa-times"></i>
                        </a>
                    </t>

                </div>
            </form>


            <!-- EMPTY STATE -->
            <t t-if="not documents">
                <p>No documents found.</p>
            </t>

            <!-- TABLE -->
            <t t-if="documents">
                <!-- ========================= -->
                <!-- DESKTOP TABLE (UNCHANGED) -->
                <!-- ========================= -->

                <div class="d-none d-md-block">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Filename</th>
                            <th>Date</th>
                            <th>Your Status</th>
                            <th>Workflow</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>

                    <tbody>

                        <t t-foreach="documents" t-as="doc">

                            <t t-set="item" t-value="doc['item']"/>
                            <t t-set="filename" t-value="doc['filename']"/>
                            <t t-set="date" t-value="doc['date']"/>
                            <t t-set="your_status" t-value="doc['your_status']"/>
                            <t t-set="workflow_status" t-value="doc['workflow_status']"/>
                            

                            <tr>

                                <!-- FILE -->
                                <td>
                                    <t t-esc="filename"/>
                                </td>

                                <!-- DATE -->
                                <td>
                                    <t t-esc="date"/>
                                </td>

                                <!-- YOUR STATUS BADGE -->
                                <td>
                                    <t t-if="'游릭' in your_status">
                                        <span class="badge bg-success">Signed</span>
                                    </t>
                                    <t t-elif="'游리' in your_status">
                                        <span class="badge bg-warning text-dark">Pending</span>
                                    </t>
                                    <t t-elif="'游댮' in your_status">
                                        <span class="badge bg-danger">Rejected</span>
                                    </t>
                                </td>

                                <!-- WORKFLOW -->
                                <td>
                                    <t t-esc="workflow_status"/>
                                </td>

                                <!-- ACTIONS -->
                                <td class="text-end">

                                  <!-- REJECTED -->
                                    <t t-if="'游댮' in workflow_status">
                                        <span class="badge bg-danger">Rejected</span>
                                    </t>

                                    <!-- PENDING -->
                                    <t t-elif="'游리' in your_status">
                                        <a class="btn btn-sm btn-primary"
                                           t-attf-href="/sign/document/{{ item.sign_request_id.id }}/{{ doc['access_token'] }}?portal=1"
                                        target="_blank">
                                            Sign
                                        </a>
                                    </t>

                                    <!-- SIGNED -->
                                    <t t-else="">
                                        <a class="btn btn-sm btn-primary"
                                        t-attf-href="/my/signature/{{ item.id }}?access_token={{ doc['access_token'] }}"
                                        target="_blank">
                                            View
                                        </a>
                                    </t>
                                    <!-- DOWNLOAD FINAL PDF (FIXED TOKEN!) -->
                                    <t t-if="item.sign_request_id.state == 'signed'">
                                        <a class="btn btn-sm btn-outline-secondary ms-1"
                                           t-attf-href="/sign/download/{{ item.sign_request_id.id }}/{{ item.sign_request_id.access_token }}/completed"
                                           target="_blank">
                                            Download
                                        </a>
                                    </t>

                                </td>

                            </tr>
                        </t>

                    </tbody>
                </table>
                 </div>
                  <!-- ========================= -->
    <!-- MOBILE CARDS -->
    <!-- ========================= -->

    <div class="d-md-none">

        <t t-foreach="documents" t-as="doc">

            <t t-set="item" t-value="doc['item']"/>
            <t t-set="filename" t-value="doc['filename']"/>
            <t t-set="date" t-value="doc['date']"/>
            <t t-set="your_status" t-value="doc['your_status']"/>
            <t t-set="workflow_status" t-value="doc['workflow_status']"/>

            <div class="card mb-3 rounded-4 shadow-sm">
                <div class="card-body small">

                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <div class="fw-semibold">
                            <t t-esc="filename"/>
                        </div>

                        <div>
                            <t t-if="'游릭' in your_status">
                                <span class="badge bg-success">Signed</span>
                            </t>
                            <t t-elif="'游리' in your_status">
                                <span class="badge bg-warning text-dark">Pending</span>
                            </t>
                            <t t-elif="'游댮' in your_status">
                                <span class="badge bg-danger">Rejected</span>
                            </t>
                        </div>
                    </div>

                    <div class="text-muted small mb-2">
                        <t t-esc="date"/>
                    </div>

                    <div class="text-muted small mb-3">
                        <t t-esc="workflow_status"/>
                    </div>

                    <div class="d-flex justify-content-end gap-2">

                        <t t-if="'游댮' in workflow_status">
                            <span class="badge bg-danger">Rejected</span>
                        </t>

                        <t t-elif="'游리' in your_status">
                            <a class="btn btn-sm btn-primary"
                               t-attf-href="/sign/document/{{ item.sign_request_id.id }}/{{ doc['access_token'] }}?portal=1"
                               target="_blank">
                                Sign
                            </a>
                        </t>

                        <t t-else="">
                            <a class="btn btn-sm btn-outline-primary"
                               t-attf-href="/my/signature/{{ item.id }}?access_token={{ doc['access_token'] }}"
                               target="_blank">
                                View
                            </a>
                        </t>

                        <t t-if="item.sign_request_id.state == 'signed'">
                            <a class="btn btn-sm btn-outline-secondary"
                               t-attf-href="/sign/download/{{ item.sign_request_id.id }}/{{ item.sign_request_id.access_token }}/completed"
                               target="_blank">
                                Download
                            </a>
                        </t>

                    </div>

                </div>
            </div>

        </t>

    </div>

            </t>
        </div>
        <script>
        document.addEventListener("DOMContentLoaded", function() {

            const input = document.getElementById("signSearchInput");
            if (!input) return;

            input.addEventListener("input", function() {

                if (this.value.trim() === "") {

                    const filter = new URLSearchParams(window.location.search)
                        .get('filter') || 'pending';

                    window.location.href =
                        "/my/employee/sign?filter=" + filter;
                }

            });

        });
        </script>


    </t>
</template>

</odoo>
