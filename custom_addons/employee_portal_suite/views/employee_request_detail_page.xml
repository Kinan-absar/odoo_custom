<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="employee_request_detail_page" name="Employee Request Detail">
        <t t-call="employee_portal_suite.employee_portal_layout">

            <div class="container mt-3 employee-req-detail">

                <!-- BACK BUTTON -->
                <div class="mb-4">
                    <a href="/my/employee/requests" class="app-back-btn">
                        <i class="fa fa-arrow-left"></i>
                        <span>Back</span>
                    </a>
                </div>

                <!-- PAGE HEADER -->
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <h4 class="mb-0 fw-bold">Employee Request</h4>
                        <div class="text-muted small">
                            <t t-esc="request_rec.name"/>
                        </div>
                    </div>

                    <div>
                        <span class="badge bg-light text-dark border">
                            <t t-esc="request_rec.get_readable_status()"/>
                        </span>
                    </div>
                </div>

                <!-- DOWNLOAD PDF -->
                <t t-if="request_rec.state in ['approved', 'rejected']">
                    <div class="mb-3">
                        <a t-att-href="'/report/pdf/employee_portal_suite.report_employee_request_document/%s' % request_rec.id"
                        class="btn btn-outline-primary btn-sm"
                        target="_blank">
                            Download PDF
                        </a>
                    </div>
                </t>

                <!-- OVERVIEW CARD -->
                <div class="card mb-3 rounded-4 shadow-sm">
                    <div class="card-body small">

                        <div class="row g-3">

                            <div class="col-6">
                                <div class="text-muted">Type</div>
                                <div class="fw-semibold">
                                    <t t-esc="request_rec.get_request_type_display()"/>
                                </div>
                            </div>

                            <div class="col-6">
                                <div class="text-muted">Date</div>
                                <div class="fw-semibold">
                                    <t t-esc="request_rec.request_date"/>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="text-muted">Description</div>
                                <div class="fw-semibold">
                                    <t t-esc="request_rec.description"/>
                                </div>
                            </div>

                            <t t-if="request_rec.request_type == 'leave'">
                                <div class="col-6">
                                    <div class="text-muted">Leave From</div>
                                    <div class="fw-semibold">
                                        <t t-esc="request_rec.leave_from"/>
                                    </div>
                                </div>

                                <div class="col-6">
                                    <div class="text-muted">Leave To</div>
                                    <div class="fw-semibold">
                                        <t t-esc="request_rec.leave_to"/>
                                    </div>
                                </div>
                            </t>

                        </div>

                    </div>
                </div>

                <!-- TIMELINE -->
                <div class="card mb-3 rounded-4 shadow-sm">
                    <div class="card-header bg-white fw-semibold">
                        Approval Timeline
                    </div>

                    <div class="card-body small">

                        <t t-if="request_rec.get_portal_timeline()">
                            <ul class="timeline">

                                <t t-foreach="request_rec.get_portal_timeline()" t-as="ev">
                                    <li class="timeline-item">
                                        <div class="timeline-marker"></div>
                                        <div class="timeline-content">
                                            <div class="fw-semibold">
                                                <t t-esc="ev['stage']"/>
                                            </div>

                                            <div class="text-muted small">
                                                <t t-esc="ev['date']"/>
                                            </div>

                                            <t t-if="ev['comment']">
                                                <div class="small mt-1">
                                                    <t t-esc="ev['comment']"/>
                                                </div>
                                            </t>
                                        </div>
                                    </li>
                                </t>

                            </ul>
                        </t>

                        <t t-else="">
                            <div class="text-muted small">
                                No approval activity yet.
                            </div>
                        </t>

                    </div>
                </div>

            </div>



        </t>
    </template>

</odoo>
