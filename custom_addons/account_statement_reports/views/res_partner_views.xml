<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="res_partner_form_statement_buttons" model="ir.ui.view">
        <field name="name">res.partner.form.statement.buttons</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//div[@name='button_box']" position="inside">

                <!-- Customer Statement -->
                <button name="action_open_customer_statement_wizard"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-file-text-o"
                        invisible="customer_rank == 0">
                    <div class="o_stat_info">
                        <span class="o_stat_value">
                            <field name="statement_balance" widget="monetary"/>
                        </span>
                        <span class="o_stat_text">
                            Customer Statement
                        </span>
                    </div>
                </button>

                <!-- Vendor Statement -->
                <button name="action_open_vendor_statement_wizard"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-file-text"
                        invisible="supplier_rank == 0">
                    <div class="o_stat_info">
                        <span class="o_stat_value">
                            <field name="statement_balance" widget="monetary"/>
                        </span>
                    <span class="o_stat_text">
                            Vendor Statement
                        </span>
                    </div>
                </button>

            </xpath>

        </field>
    </record>

</odoo>
