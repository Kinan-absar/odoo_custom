<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="asr_vendor_statement">

        <t t-call="web.external_layout">
            <style>
                .page {
                    font-size: 9px;
                }

                .header-block .header-line {
                    font-size: 13px;
                    margin-bottom: 3px;
                }

                /* ===== Statement Table ===== */
                table.statement-table {
                    width: 100%;
                    border-collapse: collapse;
                    margin-top: 10px;
                }

                table.statement-table thead th {
                    background: #f0f0f0;
                    font-weight: 600;
                    font-size: 9px;
                    padding: 6px 5px;
                    border: 1px solid #cfcfcf;
                    white-space: nowrap;
                }

                table.statement-table tbody td {
                    padding: 5px 5px;
                    border: 1px solid #e0e0e0;
                    vertical-align: middle;
                }

                table.statement-table tbody tr:nth-child(even) {
                    background: #fafafa;
                }

                table.statement-table tfoot td {
                    padding: 6px 5px;
                    border: 1px solid #cfcfcf;
                    font-weight: bold;
                    background: #f5f5f5;
                }

                .text-end {
                    text-align: right;
                    white-space: nowrap;
                }

                .col-date { width: 10%; }
                .col-move { width: 16%; }
                .col-ref  { width: 20%; }
                .col-due  { width: 10%; }
                .col-amt  { width: 11%; }
            </style>

            <t t-foreach="docs" t-as="doc">

            <t t-set="company" t-value="doc.company_id"/>

                <main>
                    <div class="page">

                        <!-- Header -->
                        <div style="display:flex; justify-content:space-between; margin-bottom:20px;">
                          <div class="header-block" style="margin-bottom:12px;">
                                <h2>Vendor Statement</h2>
                            
                                <div class="header-line">
                                    <strong>Vendor:</strong>
                                    <span t-esc="doc.partner_id.name"/>
                                </div>
                            
                                <div class="header-line">
                                    <strong>Period:</strong>
                                    <span t-esc="doc.date_from"/> â€”
                                    <span t-esc="doc.date_to"/>
                                </div>
                            </div>
                        </div>


                        <table class="statement-table">
                            <thead>
                                <tr>
                                    <th class="col-date">Date</th>
                                    <th class="col-move">Move</th>
                                    <th class="col-ref">Reference</th>
                                    <th class="col-due">Due Date</th>
                                    <th class="text-end col-amt">Debit</th>
                                    <th class="text-end col-amt">Credit</th>
                                    <th class="text-end col-amt">Balance</th>
                                </tr>
                            </thead>


                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="l">
                                    <tr>
                                        <td><t t-esc="l.date"/></td>
                                        <td><t t-esc="l.move"/></td>
                                        <td><t t-esc="l.reference"/></td>
                                        <td><t t-esc="l.due_date"/></td>

                                        <td class="text-end">
                                            <span t-field="l.debit"
                                                  t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                        </td>

                                        <td class="text-end">
                                            <span t-field="l.credit"
                                                  t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                        </td>

                                        <td class="text-end">
                                            <span t-field="l.balance"
                                                  t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>

                            <tfoot>
                                <tr style="font-weight:bold; background:#f2f2f2;">
                                    <td colspan="4" class="text-end">Totals</td>

                                     <td class="text-end">
                            <span t-esc="sum(doc.line_ids.mapped('debit'))"
                                t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                     </td>

                                      <td class="text-end">
                            <span t-esc="sum(doc.line_ids.mapped('credit'))"
                                t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                       </td>

                                   <td class="text-end">
                            <span t-field="doc.final_balance"
                                t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                    </td>

                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </main>

            </t>
        </t>

    </template>
</odoo>
