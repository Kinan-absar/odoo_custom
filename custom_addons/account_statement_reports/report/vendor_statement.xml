<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="asr_vendor_statement">

        <t t-call="web.external_layout">
            <style>
            .page {
                font-size: 9px;
            }
            .header-block .header-line {
                font-size: 13px;
                margin-bottom: 3px;
            }
        </style>
            <t t-foreach="docs" t-as="doc">

                <t t-set="company" t-value="doc.company_id"/>

                <main>
                    <div class="page">

                        <!-- Header -->
                        <div style="display:flex; justify-content:space-between; margin-bottom:20px;">
                          <div class="header-block" style="margin-bottom:12px;">
                                <h2>Vendor Statement</h2>
                            
                                <div class="header-line">
                                    <strong>Vendor:</strong>
                                    <span t-esc="doc.partner_id.name"/>
                                </div>
                            
                                <div class="header-line">
                                    <strong>Period:</strong>
                                    <span t-esc="doc.date_from"/> â€”
                                    <span t-esc="doc.date_to"/>
                                </div>
                            </div>
                        </div>


                        <table class="table table-bordered table-sm">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Move</th>
                                    <th>Reference</th>
                                    <th>Due Date</th>
                                    <th class="text-end">Debit</th>
                                    <th class="text-end">Credit</th>
                                    <th class="text-end">Balance</th>
                                </tr>
                            </thead>

                            <tbody>
                                <t t-foreach="doc.line_ids" t-as="l">
                                    <tr>
                                        <td><t t-esc="l.date"/></td>
                                        <td><t t-esc="l.move"/></td>
                                        <td><t t-esc="l.reference"/></td>
                                        <td><t t-esc="l.due_date"/></td>

                                        <td class="text-end">
                                            <span t-field="l.debit"
                                                  t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                        </td>

                                        <td class="text-end">
                                            <span t-field="l.credit"
                                                  t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                        </td>

                                        <td class="text-end">
                                            <span t-field="l.balance"
                                                  t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>

                            <tfoot>
                                <tr style="font-weight:bold; background:#f2f2f2;">
                                    <td colspan="4" class="text-end">Totals</td>

                                     <td class="text-end">
                            <span t-esc="sum(doc.line_ids.mapped('debit'))"
                                t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                     </td>

                                      <td class="text-end">
                            <span t-esc="sum(doc.line_ids.mapped('credit'))"
                                t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                       </td>

                                   <td class="text-end">
                            <span t-field="doc.final_balance"
                                t-options="{'widget':'monetary','display_currency':doc.company_id.currency_id}"/>
                                    </td>

                                </tr>
                            </tfoot>
                        </table>

                    </div>
                </main>

            </t>
        </t>

    </template>
</odoo>
