<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="group_petty_cash_user" model="res.groups">
        <field name="name">Petty Cash User</field>
        <field name="category_id" ref="base.module_category_accounting"/>
    </record>

    <record id="group_petty_cash_accountant" model="res.groups">
        <field name="name">Petty Cash Accountant</field>
        <field name="category_id" ref="base.module_category_accounting"/>
    </record>
    <record id="group_portal_petty_cash_user" model="res.groups">
        <field name="name">Portal Petty Cash User</field>
        <field name="category_id" ref="base.module_category_portal"/>
        <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
    </record>
    <record id="petty_cash_portal_rule" model="ir.rule">
        <field name="name">Portal Petty Cash Own Records</field>
        <field name="model_id" ref="model_petty_cash"/>
        <field name="domain_force">[('user_id','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('petty_cash_management.group_portal_petty_cash_user'))]"/>
    </record>


</odoo>
