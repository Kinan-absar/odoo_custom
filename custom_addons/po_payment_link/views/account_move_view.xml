<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_account_move_form_po_payment" model="ir.ui.view">
        <field name="name">account.move.form.po.payment</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_top_right']" position="after">
                <group invisible="move_type != 'outbound'">
                    <field name="purchase_id"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
